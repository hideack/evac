#!/usr/bin/env node
var program = require('commander');
var core = require('../lib/core');

var main = function() {
  program
    .version(require('../package.json').version)
    .option('-v, --verbose', 'Verbose mode.')
    .usage('[options] <recipe file ...>')
    .parse(process.argv);

  if (program.args.length == 0) {
    program.help();
    process.exit(0);
  }

  core.start(program, program.args);
}

main();
